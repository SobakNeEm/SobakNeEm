<Window x:Class="ManagmentSudentsOIk.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagmentSudentsOIk.Windows"
        mc:Ignorable="d"
        Title="Authorization" Height="400" Width="400">
    <Grid x:Name="_grid">
        <StackPanel>
            <Label Content="Авторизация" HorizontalAlignment="Center"/>
            <StackPanel Margin="40 70 40 0 ">
                <Label Content="Логин" />
                <TextBox x:Name="tbLogin" Margin="0 20 0 20"/>
                <Label Content="Пароль"/>
                <PasswordBox x:Name="tbPassword" Margin="0 20 0 20"/>
                <Button Content="Войти" Width="200" Click="Button_Click"/>
                <Button Content="Рековери" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

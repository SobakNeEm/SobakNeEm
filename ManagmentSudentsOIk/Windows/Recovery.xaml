<Window x:Class="ManagmentSudentsOIk.Windows.Recovery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagmentSudentsOIk.Windows"
        mc:Ignorable="d"
        Title="Recovery" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Восстановление пароля" HorizontalAlignment="Center" FontSize="20"/>
            <Label Content="Введите Почту"/>
            <TextBox x:Name="tbMail"/>
            <Label Content="Введите логин"/>
            <TextBox x:Name="tbLogin"/>
            <Button Content="Восстановить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
